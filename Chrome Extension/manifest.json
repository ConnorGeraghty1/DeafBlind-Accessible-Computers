{
  "manifest_version": 3,
  "name": "Tactile Deafblind Communication",
  "version": "1.0",
  "description": "Browser extension prototype for tactile communication using a robotic arm.",
  "options_page": "options.html",
  "icons": {
   "16": "LauraIMG.png",
   "32": "LauraIMG.png",
   "48": "LauraIMG.png",
   "128": "LauraIMG.png"},
  "action":{
    "default_popup": "web_popup.html",
    "default_icon": "LauraIMG.png"
  },
  "permissions": [],
  "host_permissions":[
    "#://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
  
}